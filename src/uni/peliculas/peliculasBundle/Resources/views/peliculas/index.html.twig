{% extends 'uniPeliculasBundle::layout.html.twig' %}

{% block central -%}
    <h1>Peliculas</h1>

    <table class="records_list">
        <thead>
            <tr>
                
                <th>Titulo</th>
                <th>Sipnosis</th>
                <th>Director</th>
                <th>Fecha</th>
                <th>Foto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('peliculas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titulo }}</td>
                <td>{{ entity.sipnosis }}</td>
                <td>{{ entity.director }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.foto }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('peliculas_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('peliculas_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('peliculas_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
